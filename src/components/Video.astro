---
import { Picture } from "astro:assets";
import video from "../assets/video.png";
---

<div id="video" class="flex flex-col">
  <div class="container mx-auto px-4 pt-12 pb-7 flex flex-col gap-y-5 xl:px-6">
    <!-- video -->
    <Picture
      src={video}
      formats={["avif", "webp"]}
      alt="Video"
      pictureAttributes={{ class: "self-center max-w-4xl" }}
    />
  </div>
</div>
